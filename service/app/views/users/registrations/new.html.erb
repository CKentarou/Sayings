<%= stylesheet_link_tag 'landing', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="auth-page">
  <div class="auth-container">
    <h1 class="auth-title">新規登録</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your@email.com" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em class="password-hint">（<%= @minimum_password_length %>文字以上）</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード（確認）" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワードを再入力" %>
      </div>

      <div class="actions">
        <%= f.submit "アカウント作成" %>
      </div>
    <% end %>

    <div class="auth-links">
      <div class="auth-divider">
        <span>または</span>
      </div>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
